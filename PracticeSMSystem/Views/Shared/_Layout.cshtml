    <!-- ✅ UNIVERSAL AJAX SCRIPT -->
    <script>
         // ✅ Function to open modal with dynamic content
        function openModal(url, modalId = '#appModal', contentId = '#modalContent') {
            $.get(url)
                .done(function (data) {
                    $(contentId).html(data);
                    $(modalId).modal('show');
                })
                .fail(function () {
                    alert('❌ Failed to load modal content.');
                });
        }

        // ✅ Universal AJAX Form Submission (for any modal form)
        $(document).on('submit', 'form[data-ajax="true"]', function (e) {
            e.preventDefault();
            const form = $(this);
            const modal = $('#appModal'); // universal modal container

            $.ajax({
                type: form.attr('method') || 'POST',
                url: form.attr('action'),
                data: form.serialize(),
                success: function (res) {
                    // ✅ Case 1: Server returns JSON (preferred)
                    if (res.success !== undefined) {
                        // Close the modal
                        modal.modal('hide');

                        // Refresh a specific container if defined via data-target
                        const target = form.data('target');
                        if (target) {
                            $.get(window.location.href, function (data) {
                                const newHtml = $(data).find(target).html();
                                $(target).html(newHtml);
                            });
                        }

                        // Optional success message
                        if (res.message) {
                            alert(res.message);
                        }
                    }
                    // ✅ Case 2: Server returns HTML (e.g., partial view with validation errors)
                    else if (typeof res === 'string') {
                        form.closest('.modal-content').html(res);
                    }
                },
                error: function () {
                    alert('❌ Error while processing your request.');
                }
            });
        });

        
    </script>

    <!-- ✅ END UNIVERSAL AJAX SCRIPT -->
