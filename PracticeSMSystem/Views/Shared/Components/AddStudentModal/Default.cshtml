@model PracticeSMSystem.Data.Models.Guardian

<div class="modal fade" id="addStudentModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="addStudentModalLabel-@Model.Id">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-controller="Guardian" asp-action="AddStudents" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <input type="hidden" name="guardianId" value="@Model.Id" />

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="addStudentModalLabel-@Model.Id">
                    Add Students for @Model.FullName
                </h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label>Select Students</label>
                    <select name="SelectedStudentIds"
                            asp-items="@(ViewData["StudentList"] as MultiSelectList)"
                            multiple
                            class="form-control">
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save Students</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>
