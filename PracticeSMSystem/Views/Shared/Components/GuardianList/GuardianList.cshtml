@model IEnumerable<PracticeSMSystem.Data.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var selectedId = ViewBag.SelectedStudentId as int?;
    var guardianStudents = ViewBag.GuardianStudents as List<PracticeSMSystem.Data.Models.GuardianStudent>;
}

<section class="content-header">
    <h1><small>Students and Guardians</small></h1>
</section>

<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Student List</h3>
        </div>

        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Class</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th style="text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stu in Model)
                    {
                        <tr>
                            <td>@stu.FullName</td>
                            <td>@stu.ClassRoom</td>
                            <td>@stu.Gender</td>
                            <td>@stu.Email</td>
                            <td style="text-align:center">
                                <a asp-action="List" asp-route-id="@stu.Id" class="btn btn-sm btn-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>

                        @* Inline expand section *@
                        @if (selectedId != null && selectedId == stu.Id)
                        {
                            <tr>
                                <td colspan="5" class="p-0">
                                    @if (guardianStudents != null && guardianStudents.Any())
                                    {
                                        @await Html.PartialAsync("_GuardianAndStudentsPartial", guardianStudents)
                                    }
                                    else
                                    {
                                        <div class="text-center text-muted p-3">
                                            No guardians found for this student.
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
