@model PracticeSMSystem.Data.Models.Guardian

<div class="modal fade" id="guardianModal" tabindex="-1" role="dialog" aria-labelledby="guardianModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-controller="Guardian" asp-action="Create" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="guardianModalLabel">Add New Guardian</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            <input asp-for="GFirstName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input asp-for="GLastName" class="form-control" required />
                        </div>
                       @*  <div class="form-group">
                            <label>Relationship</label>
                            <input asp-for="GRelationship" class="form-control" />
                        </div> *@
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="GPhone" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="GEmail" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input asp-for="GAddress" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label>Select Students</label>
                    <select name="SelectedStudentIds"
                            asp-items="@(ViewData["StudentList"] as MultiSelectList)"
                            multiple
                            class="form-control">
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create Guardian</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

