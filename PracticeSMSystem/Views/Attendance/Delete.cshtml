@model PracticeSMSystem.Data.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-danger shadow-lg">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Attendance Record</h3>
                <p class="mb-0">Are you sure you want to delete this attendance record?</p>
            </div>

            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Id</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Student Name</dt>
                    <dd class="col-sm-9">@Model.Student?.FullName</dd>

                    <dt class="col-sm-3">Attendance Status</dt>
                    <dd class="col-sm-9">@Model.AttendanceStatus</dd>

                    <dt class="col-sm-3">Remarks</dt>
                    <dd class="col-sm-9">@Model.AttendanceRemarks</dd>

                    <dt class="col-sm-3">Section</dt>
                    <dd class="col-sm-9">@Model.Section?.SectionName</dd>

                    <dt class="col-sm-3">Subject</dt>
                    <dd class="col-sm-9">@Model.Subject?.SubjectName</dd>

                    <dt class="col-sm-3">Class</dt>
                    <dd class="col-sm-9">
                        @Model.ClassRoom?.ClassRName"
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <form asp-action="Delete" asp-controller="Attendance" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="AttendanceList" asp-controller="Attendance" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>