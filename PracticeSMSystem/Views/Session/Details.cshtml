@model PracticeSMSystem.Data.Models.Session

@{
    ViewData["Title"] = "Session Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">

        <h2 class="mb-3">Session Details</h2>

        <div class="card shadow-lg rounded">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Session Name</dt>
                    <dd class="col-sm-9">@Model.SessionName</dd>

                    <dt class="col-sm-3">Start Date</dt>
                    <dd class="col-sm-9">@Model.StartDate.ToString("dd-MMM-yyyy")</dd>

                    <dt class="col-sm-3">End Date</dt>
                    <dd class="col-sm-9">@Model.EnDate.ToString("dd-MMM-yyyy")</dd>

                    <dt class="col-sm-3">Created On</dt>
                    <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy")</dd>

                    <dt class="col-sm-3">Created By</dt>
                    <dd class="col-sm-9">@Model.CreatedBy ?? <span class="text-muted">Unknown</span></dd>
                </dl>
            </div>
        </div>

        <h4 class="mt-4">Associated Entities</h4>

        <div class="row">
            <div class="col-md-6">
                <div class="card border-warning mb-3">
                    <div class="card-header bg-warning text-dark">Linked School Classes</div>
                    <div class="card-body">
                        <p>Total: @Model.classroom?.Count ?? 0</p>
                        <ul>
                            @foreach (var cls in Model.classroom ?? new List<PracticeSMSystem.Data.Models.ClassRoom>())
                            {
                                <li>
                                    <strong>@cls.ClassRName</strong>
                                    @if (!string.IsNullOrEmpty(cls.Description))
                                    {
                                        <span class="text-muted"> - @cls.Description</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</section>
