@model PracticeSMSystem.Data.Models.Session
<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">
        <div class="col-md-8 offset-md-2">
            <h2>Delete Session</h2>

            <p>Are you sure you want to delete this Session?</p>

            <div>
                <strong>Id:</strong> @Model.Id <br />
                <strong>Session Name:</strong> @Model.SessionName <br />
                <strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd") <br />
                <strong>End Date:</strong> @Model.EnDate.ToString("yyyy-MM-dd") <br />
                <strong>Assigned Classes:</strong>
                @if (Model.classroom != null && Model.classroom.Any(c => !c.IsDeleted))
                {
                    <ul>
                        @foreach (var cls in Model.classroom.Where(c => !c.IsDeleted))
                        {
                            <li>@cls.ClassRName</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">No Classes Assigned</span>
                }
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</section>
