@model PracticeSMSystem.Data.Models.Session

@{
    ViewData["Title"] = "Create Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade" id="sessionCreateModal" tabindex="-1" role="dialog" aria-labelledby="sessionCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="Session" asp-action="Create" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sessionCreateModalLabel">Add Session</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="SessionName"></label>
                    <input asp-for="SessionName" class="form-control" />
                    <span asp-validation-for="SessionName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EnDate"></label>
                    <input asp-for="EnDate" type="date" class="form-control" />
                    <span asp-validation-for="EnDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Select Classes</label>
                    <select asp-for="SelectedClassRoomIds" class="form-control" multiple
                            asp-items="@(new MultiSelectList(ViewBag.SchoolClassList, "Id", "SClassName"))">
                    </select>
                    <small class="form-text text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple classes.</small>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Add Session</button>
            </div>
        </form>
    </div>
</div>
