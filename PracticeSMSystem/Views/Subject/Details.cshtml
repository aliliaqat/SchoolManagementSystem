@model PracticeSMSystem.Data.Models.Subject

@{
    ViewData["Title"] = "Subject Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">

            <div class="card-header bg-aqua-gradient text-white">
                <h2 class="mb-3">Subject Details</h2>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Subject Name</dt>
                <dd class="col-sm-9">@Model.SubjectName</dd>

                <dt class="col-sm-3">Subject Code</dt>
                <dd class="col-sm-9">@Model.SubjectCode</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">
                    @if (Model.Department != null)
                    {
                        @Model.Department.DName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">ClassRoom</dt>
                <dd class="col-sm-9">
                    @if (Model.ClassRoom != null)
                    {
                        @Model.ClassRoom.ClassRName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Teacher</dt>
                <dd class="col-sm-9">
                    @if (Model.Teacher != null)
                    {
                        @($"{Model.Teacher?.TFirstName} {Model.Teacher?.TLastName}")
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy")</dd>

                <dt class="col-sm-3">Updated On</dt>
                <dd class="col-sm-9">@Model.UpdatedOn?.ToString("dd-MMM-yyyy")</dd>
            </dl>
        </div>
    </div>

    <h4 class="mt-4">Associated Entities</h4>

    <div class="row">
        <div class="col-md-4">
            <div class="card card-info shadow-sm">
                <h5 class="card-title">Department Info</h5>
                <div class="card-body">
                    @if (Model.Department != null)
                    {
                        <p><b>Department Name:</b> @Model.Department.DName</p>
                    }
                    else
                    {
                        <span class="text-muted">No Department Linked</span>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-success shadow-sm">
                <h5 class="card-title">Class Info</h5>
                <div class="card-body">
                    @if (Model.ClassRoom != null)
                    {
                        <p><b>Class Name:</b> @Model.ClassRoom.ClassRName</p>
                    }
                    else
                    {
                        <span class="text-muted">No Session Linked</span>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card card-warning shadow-sm">
                <h5 class="card-title">Teacher Info</h5>
                <div class="card-body">
                    @if (Model.Teacher != null)
                    {
                        <p><b>Teacher Name:</b> @($"{Model.Teacher?.TFirstName} {Model.Teacher?.TLastName}")</p>
                    }
                    else
                    {
                        <span class="text-muted">No Teacher Linked</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="SubjectList" class="btn btn-secondary">Back to List</a>
    </div>
</section>
