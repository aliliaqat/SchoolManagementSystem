@model PracticeSMSystem.Data.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">

            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Subject</h3>
                <p>Are you sure you want to delete this Subject?</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                <dt class="col-sm-3">Subject Name</dt>
                <dd class="col-sm-9">@Model.SubjectName</dd>

                <dt class="col-sm-3">Subject Code</dt>
                <dd class="col-sm-9">@Model.SubjectCode</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">
                    @if (Model.Department != null)
                    {
                        @Model.Department?.DName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Class</dt>
                <dd class="col-sm-9">
                    @if (Model.ClassRoom != null)
                    {
                        @Model.ClassRoom?.ClassRName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Teacher</dt>
                <dd class="col-sm-9">
                    @if (Model.Teacher != null)
                    {
                        @Model.Teacher?.FullName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">Created On</dt>
                <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="DeleteConformed" method="post" class="mt-3">
           
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="SubjectList" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>
