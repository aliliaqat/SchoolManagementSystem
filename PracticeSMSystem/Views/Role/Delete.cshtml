@model PracticeSMSystem.Data.Models.Role

<h2>Delete Role</h2>

<p>Are you sure you want to delete this role?</p>

<div>
    <strong>Id:</strong> @Model.Id <br />
    <strong>Name:</strong> @Model.RoleName <br />
    <strong>Description:</strong> @Model.RoleDescription
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("GetAll", "Role")" class="btn btn-secondary">Cancel</a>
</form>