@model PracticeSMSystem.Data.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">

            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Student</h3>
                <p>Are you sure you want to delete this StudentRecord?</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                <dt class="col-sm-3">Student Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Special Instruction</dt>
                <dd class="col-sm-9">@Model.SpecialInstruction</dd>

                <dt class="col-sm-3">Class</dt>
                <dd class="col-sm-9">
                    @if (Model?.ClassRoom != null)
                    {
                        @Model.ClassRoom.ClassRName
                    }
                    else
                    {
                        <span class="text-muted">Not Assigned</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="TeacherList" asp-controller="Teacher" asp-route-id="@Model?.Id" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>





