@model PracticeSMSystem.Data.Models.ClassRoom

@{
    ViewData["Title"] = "ClassRoom Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">
            <div class="card-header bg-aqua-gradient text-white">
                <h3 class="card-title">Class Details</h3>
            </div>

            <div class="card-body">
                <dl class="row mb-4">
                    <dt class="col-sm-3">Class Name</dt>
                    <dd class="col-sm-9">@Model.ClassRName</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Department</dt>
                    <dd class="col-sm-9">
                        @if (Model.Department != null)
                        {
                            @Model.Department.DName
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Session</dt>
                    <dd class="col-sm-9">
                        @if (Model.Session != null)
                        {
                            @Model.Session.SessionName
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Assigned Teachers</dt>
                    <dd class="col-sm-9">
                        @if (Model.TeacherClasses != null && Model.TeacherClasses.Any())
                        {
                            <ul>
                                @foreach (var tc in Model.TeacherClasses)
                                {
                                    <li>@tc.Teacher.TFirstName @tc.Teacher.TLastName</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">No Teachers Assigned</span>
                        }
                    </dd>
                    <!-- ✅ Created On -->
                    <dt class="col-sm-3">Created On</dt>
                    <dd class="col-sm-9 text-primary">
                        @Model.CreatedOn?.ToString("dd-MMM-yyyy")
                    </dd>

                    <!-- ✅ Updated On -->
                    <dt class="col-sm-3">Updated On</dt>
                    <dd class="col-sm-9 text-primary">
                        @Model.UpdatedOn?.ToString("dd-MMM-yyyy")
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</section>
