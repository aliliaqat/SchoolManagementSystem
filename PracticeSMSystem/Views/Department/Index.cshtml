@model IEnumerable<PracticeSMSystem.Data.Models.Department>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Department
        <small>Section</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Department</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Department List</h3>
                    <div class="box-tools">
                        <!-- ✅ Button to open Add Department Modal -->
                        <button type="button" id="btnAddDepartment" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#deptCreateModal">
                            Add Department
                        </button>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Department Name</th>
                                <th>Description</th>
                                <th>Head of Department</th>
                                <th>Created On</th>
                                <th>Updated On</th>
                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var dept in Model)
                                {
                                    <tr>
                                        <td>@dept.DName</td>
                                        <td>@dept.DDescription</td>
                                        <td>
                                            @if (dept.Head != null)
                                            {
                                                @dept.Head.FullName
                                                @* @($"{dept.Head.FirstName} {dept.Head.LastName}") *@
                                            }
                                            else
                                            {
                                                <span class="text-muted">No Head Assigned</span>
                                            }
                                        </td>
                                        <td>@(dept.CreatedOn?.ToString("dd-MMM-yyyy") ?? "-")</td>
                                        <td>@(dept.UpdatedOn?.ToString("dd-MMM-yyyy") ?? "-")</td>
                                        <td style="text-align:right">
                                            <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-sm btn-info">Details</a>
                                            <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-primary">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@dept.Id" class="btn btn-sm btn-danger">Delete</a>
                                            
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">No department records found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ✅ Create Department Modal -->
<div class="modal fade" id="deptCreateModal" tabindex="-1" role="dialog" aria-labelledby="deptCreateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="Department" asp-action="Create" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deptCreateModalLabel">Add Department</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="DName">Department Name</label>
                    <input type="text" class="form-control" name="DName" required />
                </div>

                <div class="form-group">
                    <label for="DDescription">Description</label>
                    <textarea class="form-control" name="DDescription"></textarea>
                </div>

                <div class="form-group">
                    <label for="DepHeadId">Head of Department</label>
                    <select class="form-control" name="DepHeadId">
                        <option value="">-- Select Head --</option>
                        @if (ViewBag.StaffList != null)
                        {
                            foreach (var staff in ViewBag.StaffList as List<PracticeSMSystem.Data.Models.Staff>)
                            {
                                <option value="@staff.Id">@staff.FirstName @staff.LastName</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
