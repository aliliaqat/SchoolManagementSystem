@model PracticeSMSystem.Data.Models.Department

@{
    ViewData["Title"] = "Department Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">


        <h2 class="mb-3">Department Details</h2>

        <div class="card shadow-lg rounded">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Department Name</dt>
                    <dd class="col-sm-9">@Model.DName</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.DDescription</dd>

                    <dt class="col-sm-3">Head of Department</dt>
                    <dd class="col-sm-9">
                        @if (Model.Head != null)
                        {
                            @Model.Head.FullName
                            @* @Model.Head.FirstName @Model.Head.LastName *@
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created On</dt>
                    <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy")</dd>
                </dl>
            </div>
        </div>

        <h4 class="mt-4">Associated Entities</h4>

        <div class="row">
            <div class="col-md-4">
                <div class="card border-info mb-3">
                    <div class="card-header bg-info text-white">Staff Members</div>
                    <div class="card-body">
                        <p>Total: @Model.StaffMembers?.Count ?? 0</p>
                        <ul>
                            @foreach (var staff in Model.StaffMembers ?? new List<PracticeSMSystem.Data.Models.Staff>())
                            {
                                <li>@staff.FullName (@staff.Position)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-success mb-3">
                    <div class="card-header bg-success text-white">Teachers</div>
                    <div class="card-body">
                        <p>Total: @Model.Teachers?.Count ?? 0</p>
                        <ul>
                            @foreach (var teacher in Model.Teachers ?? new List<PracticeSMSystem.Data.Models.Teacher>())
                            {
                                <li>@teacher.FullName (@teacher.Qualification)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-warning mb-3">
                    <div class="card-header bg-warning text-dark">School Classes</div>
                    <div class="card-body">
                        <p>Total: @Model.classroom?.Count ?? 0</p>
                        <ul>
                            @foreach (var cls in Model.classroom ?? new List<PracticeSMSystem.Data.Models.ClassRoom>())
                            {
                                <li>@cls.ClassRName</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</section>
