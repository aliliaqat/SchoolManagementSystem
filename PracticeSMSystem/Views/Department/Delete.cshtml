@model PracticeSMSystem.Data.Models.Department

@{
    ViewData["Title"] = "Delete Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">

        <h2 class="mb-3 text-danger">Delete Department</h2>

        <div class="card shadow-lg border-danger rounded">
            <div class="card-body">
                <p class="text-danger fw-bold">
                    Are you sure you want to delete this department? This action cannot be undone.
                </p>

                <dl class="row">
                    <dt class="col-sm-3">Department Name</dt>
                    <dd class="col-sm-9">@Model.DName</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.DDescription</dd>

                    <dt class="col-sm-3">Head of Department</dt>
                    <dd class="col-sm-9">
                        @if (Model.Head != null)
                        {
                            @Model.Head.FullName
                           @*  @Model.Head.FirstName @Model.Head.LastName *@
                        }
                        else
                        {
                            <span class="text-muted">Not Assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created On</dt>
                    <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy")</dd>

                    <dt class="col-sm-3">Updated On</dt>
                    <dd class="col-sm-9">@Model.UpdatedOn?.ToString("dd-MMM-yyyy")</dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <div class="alert alert-warning shadow-sm text-center">
                    <strong>Warning:</strong> Once deleted, this department’s data will be marked as deleted and cannot be restored.
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-start gap-2">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Yes, Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>

    </div>
</section>
