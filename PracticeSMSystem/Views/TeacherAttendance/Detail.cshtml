@model PracticeSMSystem.Data.Models.TeacherAttendance

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div id="detailContainer">
        <div class="container-fluid">
            <div class="card card-primary shadow-lg">
                <div class="card-header bg-aqua-gradient text-white">
                    <h2 class="mb-0">Attendance Details</h2>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Teacher ID</dt>
                        <dd class="col-sm-9">@Model.TeacherId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Teacher?.FullName ?? "N/A"</dd>

                        <dt class="col-sm-3">Class</dt>
                        <dd class="col-sm-9">@Model.ClassRoom?.ClassRName ?? "N/A"</dd>

                        <dt class="col-sm-3">Departments</dt>
                        <dd class="col-sm-9">@Model.Department?.DName ?? "N/A"</dd>

                        <dt class="col-sm-3">Attendance Date</dt>
                        <dd class="col-sm-9">@Model.TeacherAttendanceDate?.ToString("dd-MMM-yyyy") ?? "N/A"</dd>

                        <dt class="col-sm-3">Updated At</dt>
                        <dd class="col-sm-9">@Model.UpDatedAt?.ToString("dd-MMM-yyyy") ?? "N/A"</dd>

                        <dt class="col-sm-3">Attendance Status</dt>
                        <dd class="col-sm-9">@Model.TeacherAttendanceStatus ?? "N/A"</dd>

                        <dt class="col-sm-3">Attendance Remarks</dt>
                        <dd class="col-sm-9">@Model.TeacherAttendanceRemarks ?? "N/A"</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-sm btn-success" onclick="openModal('/TeacherAttendance/Edit/@Model.Id')">Edit</button>
                <a asp-action="TeacherAttendanceList" class="btn btn-sm btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</section>