@using PracticeSMSystem.Data.Models
@model PracticeSMSystem.Data.Models.Staff

@{
    ViewData["Title"] = "Edit Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleList = ViewBag.Rolelist as List<Role> ?? new List<Role>();
}
<link rel="stylesheet" href="~/plugins/select2/select2.min.css">
<section class="content-header">
    <h1>
        Edit Staff List
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Advanced Elements</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <form asp-action="Edit" asp-controller="Staff" method="post">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name">
                        </div>

                        <div class="form-group">
                            <label>Date of Birth:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input asp-for="Dob" type="text" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                            </div><!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>Role</label>
                            <select asp-for="RoleId" class="form-control select2" style="width: 100%;">
                                <option selected>Select Role</option>
                                @foreach (var role in roleList)
                                {
                                    <option value="@role.Id">@role.RoleName</option>
                                }
                            </select>
                        </div>
                       
                        <div class="form-group">
                            <label>Email:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </div>
                                <input asp-for="Email" type="text" class="form-control" data-mask>
                            </div><!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            <select asp-for="Gender" type="text" class="form-control select2" style="width: 100%;">
                                <option value="0" selected>Select Gender</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                                <option value="3">Other</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- Date of Birth -->

                        <div class="form-group">
                            <label>Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name">
                        </div>

                        <!-- Existing Select2 Examples (Optional) -->
                        <div class="form-group">
                            <label>Hire Date:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input asp-for="HireDate" type="text" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
                            </div><!-- /.input group -->
                        </div>
                        <div class="form-group">
                            <label>Position</label>
                            <input asp-for="Position" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Enter Phone:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input asp-for="Phone" type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' required data-mask>
                            </div><!-- /.input group -->
                        </div>

                    </div>
                </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="text-right">
                            <input type="hidden" asp-for="Id" class="form-control" />
                            @if (Model != null && Model.Id == 0)
                            {
                                <button type="submit" class="btn btn-primary">Save</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                            <a asp-action="Index" class="btn btn-default">Back to List</a>
                        </div>
                    </div>
                </div><!-- /.box -->
            </div>
        </div>
    </form>
</section>
