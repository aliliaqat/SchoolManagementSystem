@model PracticeSMSystem.Data.Models.Staff

@{
    ViewData["Title"] = "Delete Staff";
    Layout = null;
}

<div class="" id="staffDeleteModel" tabindex="-1">
    <div class="modal-dialog" role="document">
        <form asp-controller="Staff" asp-action="Delete" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Delete Staff</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group has-feedback">
                    Do you really want to delete this staff?
                </div>
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone:</strong> @Model.Phone</p>
                        <p><strong>Role:</strong> @Model.RoleId</p>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes</button>
            </div>
        </form>
    </div>
</div>
