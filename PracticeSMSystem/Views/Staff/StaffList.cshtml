@model IEnumerable<PracticeSMSystem.Data.Models.Staff>

@{
    ViewData["Title"] = "Staff List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var GenderArray = new string[] { "", "Male", "Female", "Other" };
    var roleList = (Dictionary<int, string>)ViewBag.RoleList;
}

<section class="content-header">
    <h1>
        Staff Manager
        <small>Create and manage staff</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">staff</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Staff List</h3>
                    <div class="box-tools">
                        <div class="input-group">
                            <!-- Button trigger modal -->
                            <a asp-action="Edit" asp-route-id="0" class="btn btn-sm btn-primary">Add Staff</a>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Gender</th>
                                <th>Hire Date</th>
                                <th>Position</th>
                                <th>Role</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var staff in Model)
                                {
                                    <tr>
                                        <td>@staff.FirstName</td>
                                        <td>@staff.LastName</td>
                                        <td>@GenderArray[staff.Gender]</td>
                                        <td>@staff.HireDate.ToShortDateString()</td>
                                        <td>@staff.Position</td>
                                        <td>@roleList[staff.RoleId]</td>
                                        <td>@staff.Email</td>
                                        <td>@staff.Phone</td>
                                        <td style="text-align:right">
                                            <a asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-sm btn-primary">Edit</a>
                                            <a class="btn btn-sm btn-danger" onclick="document.getElementById('staffToDelete').value=@staff.Id" data-toggle="modal" data-target="#staffDeleteModel">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center">No staff records found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ✅ Modal with Form -->
<div class="modal fade" id="staffDeleteModel" tabindex="-1" role="dialog" aria-labelledby="staffDeleteModel1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-controller="Staff" asp-action="Delete" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Delete Staff</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <input type="hidden" name="Id" id="staffToDelete" value="" />
                <div class="form-group has-feedback">
                    Do you really want to delete this staff?
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Yes</button>
            </div>
        </form>
    </div>
</div>
