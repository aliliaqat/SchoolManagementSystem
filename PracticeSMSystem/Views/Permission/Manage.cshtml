@using PracticeSMSystem.Data.Enums
@using PracticeSMSystem.Data.Models
@model Role

@{
    var roles = ViewBag.Roles as List<Role> ?? new();
    var currentRoleId = Model?.Id ?? 0;

    var permissionOptions = Enum.GetValues(typeof(AccessLevel))
                                .Cast<AccessLevel>()
                                .Where(x => x != AccessLevel.None)
                                .ToList();
}

<form method="get" asp-action="Manage" class="mb-4">
    <select name="roleId" class="form-control" onchange="this.form.submit()">
        <option value="">-- Select Role --</option>
        @foreach (var item in roles)
        {
            <option value="@item.Id" selected="@(item.Id == currentRoleId ? "selected" : null)">
                @item.RoleName
            </option>
        }
    </select>
</form>

@if (Model == null)
{
    <div class="alert alert-info">Please select a role to manage permissions.</div>
}
else
{
    <h4 class="mb-3">Manage Permissions for <strong>@Model.RoleName</strong></h4>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form asp-action="UpdatePermissions" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        @{
            var permissions = Model.Permissions.ToList();
        }

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Feature</th>
                    @foreach (var opt in permissionOptions)
                    {
                        <th>@opt</th>
                    }
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < permissions.Count; i++)
                {
                    <tr>
                        <td>@permissions[i].Feature?.Name</td>

                        <input type="hidden" name="Permissions[@i].Id" value="@permissions[i].Id" />

                        @foreach (var opt in permissionOptions)
                        {
                            <td>
                                <input type="checkbox"
                                       name="Permissions[@i].SelectedLevels"
                                       value="@(Convert.ToInt32(opt))"
                                       @(permissions[i].AccessLevel.HasFlag(opt) ? "checked" : "") />
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">💾 Save Changes</button>
    </form>
}
