 @model PracticeSMSystem.Data.Models.StaffAttendance

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div id="detailContainer">
        <div class="container-fluid">
            <div class="card card-primary shadow-lg">
                <div class="card-header bg-aqua-gradient text-white">
                    <h2 class="mb-0">Attendance Details</h2>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Staff Id</dt>
                        <dd class="col-sm-9">@Model.StaffId</dd>

                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Staff?.FullName"</dd>

                        <dt class="col-sm-3">Departments</dt>
                        <dd class="col-sm-9">@Model.Department?.DName </dd>

                        <dt class="col-sm-3">Attendance Status</dt>
                        <dd class="col-sm-9">@Model.AttendanceStatus </dd>

                        <dt class="col-sm-3">Attendance Date</dt>
                        <dd class="col-sm-9">@Model.AttendanceDate.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-3">Created On</dt>
                        <dd class="col-sm-9">@Model.CreatedOn?.ToString("dd-MMM-yyyy") </dd>

                        <dt class="col-sm-3">Updated On</dt>
                        <dd class="col-sm-9">@Model.UpdatedOn?.ToString("dd-MMM-yyyy") </dd>

                        <dt class="col-sm-3">Deleted On</dt>
                        <dd class="col-sm-9">@Model.DeletedOn?.ToString("dd-MMM-yyyy") </dd>

                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-sm btn-success" onclick="openModal('/StaffAttendance/Edit/@Model.Id')">Edit</button>
                <a asp-action="StaffAttendanceList" class="btn btn-sm btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</section> 