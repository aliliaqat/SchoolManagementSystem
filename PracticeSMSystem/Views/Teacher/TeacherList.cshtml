@model IEnumerable<PracticeSMSystem.Data.Models.TeacherDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        <small>Teacher Department</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Teacher</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Teacher List</h3>
                    <div class="box-tools">
                        <div class="input-group">
                            <button class="btn btn-sm btn-primary" onclick="openModal('/Teacher/Create')">Add Teacher</button>
                        </div>
                    </div>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Hire Date</th>
                                <th>Department</th>
                                <th>Assigned Classes</th>
                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var teacher in Model)
                                {
                                    <tr>
                                        <td>@teacher.FullName</td>
                                        <td>@teacher.Gender</td>
                                        <td>@teacher.HireDate.ToShortDateString()</td>
                                        <td>@teacher.DepartmentName</td>
                                        <td>@teacher.AssignedClasses</td>
                                        <td style="text-align:center">
                                            <!-- ✅ Buttons to open modals -->
                                            @* <button class="btn btn-sm btn-success"
                                                    onclick="openModal('/Teacher/Edit/@teacher.TeacherId')">
                                                Edit
                                            </button> *@
                                            @* <button class="btn btn-sm btn-warning"
                                                    onclick="openModal('/Teacher/_Edit/@teacher.TeacherId')">
                                                Edit
                                            </button> *@

                                            <a href="@Url.Action("Detail", "Teacher", new { id = teacher.TeacherId })" class="btn btn-info btn-sm">Details</a>
                                            <a href="@Url.Action("Delete", "Teacher", new { id = teacher.TeacherId })" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="11" class="text-center">No teacher records found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>









