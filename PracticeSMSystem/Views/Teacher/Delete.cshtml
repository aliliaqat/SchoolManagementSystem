@model PracticeSMSystem.Data.Models.Teacher

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">

            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Teacher</h3>
                <p>Are you sure you want to delete this TeacherRecord?</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.TFirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.TLastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Qualification</dt>
                <dd class="col-sm-9">@Model.Qualification</dd>

                <dt class="col-sm-3">Assign Classes</dt>
                <dd class="col-sm-9">
                    @string.Join(", ", Model.TeacherClasses.Select(tc => tc.ClassRoom.ClassRName))
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="DeleteConfirmed" asp-controller="Teacher" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="TeacherList" asp-controller="Teacher" asp-route-id="@Model?.Id" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>