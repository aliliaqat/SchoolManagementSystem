@model IEnumerable<PracticeSMSystem.Data.Models.ClassDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Record of
        <small>Classes</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Class List</h3>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Session</th>
                                <th>Section</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Student Count</th>
                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var croom in Model)
                                {
                                    <tr>
                                        <td>@croom.ClassRName</td>
                                        <td>@croom.SessionName</td>
                                        <td>

                                            @if (croom.SectionName != null )
                                            {
                                                <span>@croom.SectionName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No Section</span>
                                            }
                                        </td>
                                        <td>@croom.StartDate?.ToString("dd-MMM-yyyy")</td>
                                        <td>@croom.EndDate?.ToString("dd-MMM-yyyy")</td>
                                        <td>@(croom.StudentCount)</td>
                                        <td style="text-align:center">
                                            <a asp-action="StudentList" asp-controller="Student" asp-route-classId="@croom.Id"
                                               class="btn btn-sm btn-primary">Enrollment</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No Class records found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>