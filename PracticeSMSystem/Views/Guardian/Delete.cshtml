@model PracticeSMSystem.Data.Models.Guardian


@{
    ViewData["Title"] = "Delete Guardian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary shadow-lg">

            <div class="card-header bg-danger text-white">
                <h3 class="card-title">Delete Guardian</h3>
                <p>Are you sure you want to delete this GuardianRecord?</p>
            </div>

            <dl class="row">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                <dt class="col-sm-3">Student Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Address</dt>
                <dd class="col-sm-9">@Model.GAddress</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.GEmail</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.GPhone</dd>

                @* <dt class="col-sm-3">RelationShip</dt>
                <dd class="col-sm-9">@Model.GRelationship</dd> *@
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="List" asp-controller="Guardian" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</section>
