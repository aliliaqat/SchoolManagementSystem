@model IEnumerable<PracticeSMSystem.Data.Models.GuardianListDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Record of <small>Guardian</small></h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Guardian List</h3>
                    <div class="box-tools">
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#guardianModal">Add Guardian</button>
                        </div>
                    </div>
                </div>

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                @* <th>Relationship</th> *@
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Student Count</th>
                                <th style="text-align:center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var grd in Model)
                                {
                                    <tr>
                                        <td>@grd.FullName</td>
                                        @* <td>@grd.GRelationship</td> *@
                                        <td>@grd.GPhone</td>
                                        <td>@grd.GEmail</td>
                                        <td>@grd.GAddress</td>
                                        <td>@(grd?.StudentCount ?? 0)</td>
                                        <td style="text-align:center">
                                            <!-- Button to open Add Student Modal -->
                                            @* <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#addStudentModal-@grd?.GuradianId">
                                                Add new Student
                                            </button> *@
                                            <a asp-action="Delete" asp-controller="Guardian" asp-route-id="@grd?.GuardianId" class="btn btn-danger">Delete</a>
                                            <a asp-action="Details" asp-controller="Guardian" asp-route-id="@grd?.GuardianId" class="btn btn-sm btn-success">Detail</a>
                                            <a asp-action="Edit" asp-controller="Guardian" asp-route-id="@grd?.GuardianId" class="btn btn-sm btn-primary">Edit</a>
                                            <!-- Include AddStudent Partial for this Guardian -->
                                           @*  @await Html.PartialAsync("_AddStudentModal", grd, ViewData) *@
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No Guardian found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    ViewData["ShowStudentDropdown"] = true;
}

<!-- Include Create Modal Partial at bottom of page -->
@await Html.PartialAsync("_CreateGuardianModal", new PracticeSMSystem.Data.Models.Guardian(), ViewData)
