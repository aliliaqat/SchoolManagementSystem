@model PracticeSMSystem.Data.Models.Guardian
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content" style="margin-top: 0px;">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2 class="text-primary">Guardian Details</h2>
        </div>
    </div>

    <!-- ✅ Guardian Information -->
    <div class="box box-primary">
        <div class="box-header with-border bg-info">
            <h3 class="box-title">Guardian Information</h3>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>Full Name</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th>Relationship</th>
                    <td>@Model.GRelationship</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.GPhone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.GEmail</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.GAddress</td>
                </tr>
            </table>
        </div>
    </div>

    <!-- ✅ Students Linked with this Guardian -->
    <div class="box box-success mt-4">
        <div class="box-header with-border bg-success">
            <h3 class="box-title">Students Linked with this Guardian</h3>
        </div>
        <div class="box-body">
            @if (Model.GuardianStudents != null && Model.GuardianStudents.Any())
            {
                <table class="table table-bordered table-striped">
                    <thead class="bg-light">
                        <tr>
                            <th>Student Name</th>
                            <th>Gender</th>
                            <th>Date of Birth</th>
                            <th>Admission Date</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gs in Model.GuardianStudents)
                        {
                            var s = gs.Student;
                            <tr>
                                <td>@s.FullName</td>
                                <td>@s.Gender</td>
                                <td>@s.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                                <td>@s.AddmissionDate.ToString("dd-MMM-yyyy")</td>
                                <td>@s.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No students are linked with this guardian.
                </div>
            }
        </div>
    </div>

    <!-- ✅ Back Button -->
    <div class="mt-3">
        <a asp-action="List" asp-controller="Guardian" class="btn btn-secondary">Back to Guardian List</a>
    </div>
</section>
