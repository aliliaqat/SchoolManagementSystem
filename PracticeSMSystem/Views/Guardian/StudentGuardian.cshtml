@model IEnumerable<PracticeSMSystem.Data.Models.GuardianStudent>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var student = ViewBag.SelectedStudent as PracticeSMSystem.Data.Models.Student;
}
