 *@<section class="content header" style="margin-top: 0px;">
    <!-- ✅ Page Header -->
    <div class="row mb-3">
        <div class="col-md-6">
            <h1 class="mb-0">
                Student Details <small class="text-muted">With Its Guardians</small>
            </h1>
        </div>
        <div class="box-header">
            <div class="box-tools">
                <div class="d-flex gap-2" style="margin-top: -15px;">
                    <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#guardianModal">
                        Attach Guardian
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ Student Info -->
    <div class="box box-primary">
        <div class="box-header with-border bg-info">
            <h3 class="box-title">Selected Student Information</h3>
        </div>
        <div class="box-body">
            @if (student != null)
            {
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>Full Name</th>
                            <td>@student.FullName</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@student.Gender</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@student.DateOfBirth.ToString("ddd-MMM-yyyy")</td>
                        </tr>
                        <tr>
                            <th>Admission Date</th>
                            <td>@student.AddmissionDate.ToString("ddd-MMM-yyyy")</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@student.Email</td>
                        </tr>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center">Student information not found.</div>
            }
        </div>
    </div>


    <!-- ✅ Guardians Info -->
    <div class="box box-success mt-3">
        <div class="box-header with-border bg-success">
            <h3 class="box-title">Guardians of Selected Student</h3>
        </div>

        <div class="box-body pt-2">
            @if (Model != null && Model.Any())
            {
                @foreach (var group in Model.GroupBy(g => g.Guardian))
                {
                    <!-- ✅ Guardian Heading -->
                    <h4 class="text-primary mt-4 mb-2">Guardian Information</h4>

                    <!-- Guardian Info Table -->
                    <table class="table table-sm table-striped table-bordered mb-3">
                        <thead class="bg-light">
                            <tr>
                                <th>Name</th>
                                <th>Relationship</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@group.Key.FullName</td>
                                <td>@group.FirstOrDefault()?.Relationship</td>
                                <td>@group.Key.GPhone</td>
                                <td>@group.Key.GEmail</td>
                                <td>@group.Key.GAddress</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- ✅ Students Linked with this Guardian -->
                    <div class="box box-info mt-2">
                        <div class="box-header with-border bg-info">
                            <h3 class="box-title">Other Students linked with this Guardian</h3>
                        </div>
                        <table class="table table-sm table-striped table-bordered">
                            <thead class="bg-light">
                                <tr>
                                    <th>Student Name</th>
                                    <th>Gender</th>
                                    <th>Date of Birth</th>
                                    <th>Admission Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in group.Select(x => x.Student).Distinct())
                                {
                                    <tr>
                                        <td>@s.FullName</td>
                                        <td>@s.Gender</td>
                                        <td>@s.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                                        <td>@s.AddmissionDate.ToString("dd-MMM-yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-warning text-center">
                    No guardian records found for this student.
                </div>
            }
        </div>
    </div>

    <!-- ✅ Back Buttons -->
    <div class="mt-3">
        <a asp-action="StudentList" asp-controller="Student" asp-route-classId="@TempData["ClassId"]" class="btn btn-secondary ms-2">Back to Student List</a>
    </div>
</section>

@{
    ViewData["ShowStudentDropdown"] = false;
}

<!-- ✅ Include Modal -->
@await Html.PartialAsync("_CreateGuardianModal", new PracticeSMSystem.Data.Models.Guardian(), ViewData)
