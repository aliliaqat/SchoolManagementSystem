@model PracticeSMSystem.Data.Models.Guardian

@{
    ViewBag.Title = "Edit Guardian";
}

<section class="content-header">
    <h2>Edit Guardian Information</h2>
</section>

<section class="content">
    <div class="box box-default">
        <div class="box-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="GFirstName"></label>
                    <input asp-for="GFirstName" class="form-control" required />
                    <span asp-validation-for="GFirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GLastName"></label>
                    <input asp-for="GLastName" class="form-control" required />
                    <span asp-validation-for="GLastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GRelationship">Relationship</label>
                    <input asp-for="GRelationship" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GPhone">Phone</label>
                    <input asp-for="GPhone" class="form-control" required />
                    <span asp-validation-for="GPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GEmail">Email</label>
                    <input asp-for="GEmail" type="email" class="form-control" required />
                    <span asp-validation-for="GEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GAddress">Address</label>
                    <input asp-for="GAddress" class="form-control" required />
                    <span asp-validation-for="GAddress" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="SelectedStudentIds">Select Students</label>
                    <select asp-for="SelectedStudentIds" asp-items="@(new MultiSelectList(ViewBag.StudentList, "Id", "StudentFName", Model.SelectedStudentIds))" class="form-control" multiple="multiple"></select>
                    <span asp-validation-for="SelectedStudentIds" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</section>






























